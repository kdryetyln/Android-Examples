<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kadriyetaylan.catchthesirinesirineyiyakala.MainActivity"
    android:background="@color/white"
    tools:layout_editor_absoluteY="81dp">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        app:layout_constraintBottom_toTopOf="@+id/textskor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textzaman">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="105dp"
            android:layout_column="0"
            android:layout_row="0"
            android:contentDescription="@string/image"
            android:onClick="skorarttir"
            app:srcCompat="@drawable/sirine" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="105dp"
            android:layout_column="1"
            android:layout_row="0"
            android:contentDescription="@string/image"
            android:onClick="skorarttir"
            app:srcCompat="@drawable/sirine" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="105dp"
            android:layout_column="2"
            android:layout_row="0"
            android:contentDescription="@string/image"
            android:onClick="skorarttir"
            app:srcCompat="@drawable/sirine" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="100dp"
            android:layout_height="105dp"
            android:layout_column="0"
            android:layout_row="1"
            android:contentDescription="@string/image"
            android:onClick="skorarttir"
            app:srcCompat="@drawable/sirine" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="100dp"
            android:layout_height="105dp"
            android:layout_column="1"
            android:layout_row="1"
            android:contentDescription="@string/image"
            android:onClick="skorarttir"
            app:srcCompat="@drawable/sirine" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="100dp"
            android:layout_height="105dp"
            android:layout_column="2"
            android:layout_row="1"
            android:contentDescription="@string/image"
            android:onClick="skorarttir"
            app:srcCompat="@drawable/sirine" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="100dp"
            android:layout_height="105dp"
            android:layout_column="0"
            android:layout_row="2"
            android:contentDescription="@string/image"
            android:onClick="skorarttir"
            app:srcCompat="@drawable/sirine" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="100dp"
            android:layout_height="105dp"
            android:layout_column="1"
            android:layout_row="2"
            android:contentDescription="@string/image"
            android:onClick="skorarttir"
            app:srcCompat="@drawable/sirine" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="100dp"
            android:layout_height="105dp"
            android:layout_column="2"
            android:layout_row="2"
            android:contentDescription="@string/image"
            android:onClick="skorarttir"
            app:srcCompat="@drawable/sirine" />
    </GridLayout>

    <TextView
        android:id="@+id/textzaman"
        android:layout_width="140dp"
        android:layout_height="39dp"
        android:layout_marginBottom="9dp"
        android:layout_marginTop="16dp"
        android:text="@string/textview"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textskor"
        android:layout_width="149dp"
        android:layout_height="39dp"
        android:layout_marginBottom="8dp"
        android:text="Skor : 0"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.706"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

</android.support.constraint.ConstraintLayout>
